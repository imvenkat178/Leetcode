class Solution {
    public int countHillValley(int[] nums) {
        int prev = -1;
        int curr = -1;
        int count = 0;
        for(int i = 1 ; i < nums.length-1 ; i++)
        {
            int j = i-1;
            while(j>=0 && nums[j]==nums[i])
            {
                j--;
            }
            int k = i+1;
            while(k<nums.length && nums[k]==nums[i])
            {
                k++;
            }
            if(j<0 || k>=nums.length)
            {
                continue;
            }
            if(nums[j] > nums[i] && nums[k]>nums[i] && prev!=0)
            {
                count+=1;
                curr =0;
            }
            else if(nums[j] < nums[i] && nums[k]<nums[i] && prev!=1){
                count+=1;
                curr = 1;
            }
            prev = curr;
        }
        return count;
    }
}
