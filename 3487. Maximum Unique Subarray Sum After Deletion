class Solution {
    public int maxSum(int[] nums) {
        Set<Integer> hashSet = new HashSet<>();
        int maxNum = Integer.MIN_VALUE;
        int sum = 0;
        for (int num : nums) {
            if (num > 0) {
                if (!hashSet.contains(num)) {
                    hashSet.add(num);
                    sum += num;
                }
            } else {
                maxNum = Math.max(maxNum, num);
            }
        }

        if (hashSet.isEmpty()) return maxNum;
        return sum;
    }
}
